{
  "id": "io.typora.flatpak",
  "command": "/app/start.sh",
  "separate-locales": false,
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=dri",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--socket=wayland"
  ],
  "rename-desktop-file": "typora.desktop",
  "modules": [
    {
      "name": "typora",
      "sources": [
        {
          "type": "archive",
          "url": "https://typora.io/linux/Typora-linux-x64-0.9.95.tar.gz",
          "sha256": "52a2865e856f1c6073dfa24da301e283c49642e809e4ad8d26ba8e3b474c7364"
        },
        {
          "type": "script",
          "dest-filename": "start.sh",
          "commands": [
            "exec zypak-wrapper /app/typora/Typora $@"
          ]
        },
        {
          "type": "file",
          "path": "typora.desktop",
          "sha256": "ac0c6951ba280942e5d79de89d4365912684e62b4461a428ecde10dbe85a0f52"
        },
        {
          "type": "file",
          "path": "typora.png",
          "sha256": "8d53673a9f4a627a2c2527dbdc8aa5d173dc6431b13f11dd069da24f8bef5b2f"
        },
        {
          "type": "file",
          "path": "typora.metainfo.xml",
          "sha256": "0760f913f867f1c8520c5f44900d5814ef7f4e5915a3a215be5db7231e54282f"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "mv Typora-linux-x64 /app/typora",
        "mv start.sh /app"
      ],
      "post-install": [
        "install -Dm644 typora.desktop /app/share/applications/typora.desktop",
        "install -Dm644 typora.png /app/share/icons/io.typora.flatpak.png",
        "install -Dm644 typora.metainfo.xml /app/share/metainfo/io.typora.flatpak.metainfo.xml"
      ]
    }
  ]
}
