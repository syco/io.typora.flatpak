{
  "id": "io.typora.flatpak",
  "command": "/app/start.sh",
  "separate-locales": false,
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=dri",
    "--filesystem=host",
    "--share=ipc",
    "--socket=x11"
  ],
  "rename-desktop-file": "typora.desktop",
  "modules": [
    {
      "name": "typora",
      "sources": [
        {
          "type": "archive",
          "url": "https://typora.io/linux/Typora-linux-x64-0.9.96.tar.gz",
          "sha256": "cdb060acdf7cb615180197c07bcbb463ab2a45e6985e6edae1b8249179abe197"
        },
        {
          "type": "script",
          "dest-filename": "start.sh",
          "commands": [
            "exec /app/typora/Typora --no-sandbox $@"
          ]
        },
        {
          "type": "file",
          "path": "typora.desktop",
          "sha256": "ac0c6951ba280942e5d79de89d4365912684e62b4461a428ecde10dbe85a0f52"
        },
        {
          "type": "file",
          "path": "typora.png",
          "sha256": "8d53673a9f4a627a2c2527dbdc8aa5d173dc6431b13f11dd069da24f8bef5b2f"
        },
        {
          "type": "file",
          "path": "typora.metainfo.xml",
          "sha256": "6ff491786b8754e7f7fbcfbe158fdf375850221d894ca30cdb88c562001ba136"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "mv Typora-linux-x64 /app/typora",
        "mv start.sh /app"
      ],
      "post-install": [
        "install -Dm644 typora.desktop /app/share/applications/typora.desktop",
        "install -Dm644 typora.png /app/share/icons/io.typora.flatpak.png",
        "install -Dm644 typora.metainfo.xml /app/share/metainfo/io.typora.flatpak.metainfo.xml"
      ]
    }
  ]
}
