{
  "id": "io.typora.flatpak",
  "command": "/app/start.sh",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=dri",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--socket=wayland"
  ],
  "rename-desktop-file": "typora.desktop",
  "modules": [
    {
      "name": "typora",
      "sources": [
        {
          "type": "archive",
          "url": "https://typora.io/linux/Typora-linux-x64-0.9.92.tar.gz",
          "sha256": "74f84cf54b37f0f96b6960f3fd4de680d88082bb9dfbb6931cd9d7fd279c7f9a"
        },
        {
          "type": "script",
          "dest-filename": "start.sh",
          "commands": [
            "exec env TMPDIR=$XDG_CACHE_HOME zypak-wrapper /app/typora/Typora $@"
          ]
        },
        {
          "type": "file",
          "path": "typora.desktop",
          "sha256": "ac0c6951ba280942e5d79de89d4365912684e62b4461a428ecde10dbe85a0f52"
        },
        {
          "type": "file",
          "path": "typora.png",
          "sha256": "8d53673a9f4a627a2c2527dbdc8aa5d173dc6431b13f11dd069da24f8bef5b2f"
        },
        {
          "type": "file",
          "path": "typora.metainfo.xml",
          "sha256": "964749847bc2ff02dc0a8cafd58234f59943ffccc2f1b3bb1a18720d28155b7e"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "mv Typora-linux-x64 /app/typora",
        "mv start.sh /app"
      ],
      "post-install": [
        "install -Dm644 typora.desktop /app/share/applications/typora.desktop",
        "install -Dm644 typora.png /app/share/icons/io.typora.flatpak.png",
        "install -Dm644 typora.metainfo.xml /app/share/metainfo/io.typora.flatpak.metainfo.xml"
      ]
    }
  ]
}
